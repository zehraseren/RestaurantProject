@model List<ResultProductDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Ürün Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Ürün ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün Adı</th>
                                    <th scope="col">Fiyat</th>
                                    <th scope="col">Kategori</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.ProductName</td>
                                        <td>@item.Price</td>
                                        <td>@item.CategoryName</td>
                                        <td>@(item.ProductStatus ? "Var" : "Yok")</td>
                                        <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-outline-danger btn-rounded">Sil</a></td>
                                        <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="d-flex justify-content-end mt-4 none-border">
                            <a href="/Product/CreateProduct/" class="btn btn-outline-primary btn-rounded mr-2">Yeni Ürün Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>