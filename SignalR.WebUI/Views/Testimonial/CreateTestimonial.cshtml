@model CreateTestimonialDto

@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Müşteri Yorum İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yenü Müşteri Yorumu Ekleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name"><b>Müşteri Ad Soyad</b></label>
                                <input type="text" class="form-control" id="name" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label for="title"><b>Müşteri Ünvanı</b></label>
                                <input type="text" class="form-control" id="title" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label for="imageUrl"><b>Görsel URL</b></label>
                                <input type="text" class="form-control" id="imageUrl" asp-for="ImageUrl">
                            </div>
                            <div class="form-group">
                                <label for="comment"><b>Yorum</b></label>
                                <input type="text" class="form-control" id="comment" asp-for="Comment">
                            </div>
                            <div class="d-flex justify-content-end mt-4 none-border">
                                <button type="submit" class="btn btn-outline-success btn-rounded mr-3">Yorumu Kaydet</button>
                                <a href="/Testimonial/Index/" class="btn btn-outline-danger btn-rounded mr-2">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>