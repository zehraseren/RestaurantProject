@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Hakkımızda Alanı Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="AboutId" />
                            <div class="form-group">
                                <label for="aboutName"><b>Başlık</b></label>
                                <input type="text" class="form-control" id="aboutName" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label for="description"><b>Açıklama</b></label>
                                <textarea rows="5" class="form-control" id="description" asp-for="Description"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="imageUrl"><b>Görsel URL</b></label>
                                <input type="text" class="form-control" id="imageUrl" asp-for="ImageUrl">
                            </div>
                            <div class="d-flex justify-content-end mt-4 none-border">
                                <button type="submit" class="btn btn-outline-success btn-rounded mr-3">Yazıyı Güncelle</button>
                                <a href="/About/Index/" class="btn btn-outline-danger btn-rounded mr-2">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>