@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkımızda Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Hakkımızda alanı ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz. <strong>Tema bütünlüğü için sadece 1 tane hakkımızda alanı oluşturmayı unutmayın.</strong>
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Görsel URL</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.ImageUrl</td>
                                        <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger btn-rounded">Sil</a></td>
                                        <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="d-flex justify-content-end mt-4 none-border">
                            <a href="/About/CreateAbout/" class="btn btn-outline-primary btn-rounded mr-2">Yeni Yazı Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>