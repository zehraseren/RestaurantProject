@model List<ResultContactDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İletişim alanıyla ilgili işlemleri yapabilirsiniz.<strong> Tema bütünlüğü için sadece 1 tane iletişim alanı oluşturmayı unutmayın.</strong>
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Konum</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">Mail</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Günler</th>
                                    <th scope="col">Günlerin Açıklaması</th>
                                    <th scope="col">Saatler</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Location</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.Mail</td>
                                        <td>@item.FooterDescription</td>
                                        <td>@item.OpenDays</td>
                                        <td>@item.OpenDaysDescription</td>
                                        <td>@item.OpenHours</td>
                                        <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger btn-rounded">Sil</a></td>
                                        <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="d-flex justify-content-end mt-4 none-border">
                            <a href="/Contact/CreateContact/" class="btn btn-outline-primary btn-rounded mr-2">Yeni İletişim Bilgisi Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>