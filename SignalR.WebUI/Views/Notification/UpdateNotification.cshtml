@model UpdateNotificationDto

@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Bildirim Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="NotificationId" />
                            <div class="form-group">
                                <label for="type"><b>Bildirim Türü</b></label>
                                <input type="text" class="form-control" id="type" asp-for="Type">
                            </div>
                            <div class="form-group">
                                <label for="icon"><b>Bildirim Icon</b></label>
                                <input type="text" class="form-control" id="icon" asp-for="Icon">
                            </div>
                            <div class="form-group">
                                <label for="description"><b>Açıklama</b></label>
                                <input type="text" class="form-control" id="description" asp-for="Description">
                            </div>
                            <div class="form-group">
                                <label for="status"><b>Durum</b></label>
                                <select asp-for="Status" asp-items="ViewBag.StatusList" class="form-control">
                                    <option>Lütfen bir durum seçin</option>
                                </select>
                            </div>
                            <div class="d-flex justify-content-end mt-4 none-border">
                                <button type="submit" class="btn btn-outline-success btn-rounded mr-3">Bildirimi Güncelle</button>
                                <a href="/Notification/Index/" class="btn btn-outline-danger btn-rounded mr-2">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>