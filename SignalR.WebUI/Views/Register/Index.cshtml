@model RegisterDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Z&S Restoran Kayıt Sayfası</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
    <link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
    <div class="page-content">
        <div class="form-v6-content">
            <div class="form-left">
                <img src="~/colorlib-regform-32/images/Sauce1.jpg" alt="form" style="width:480px; height:654px;">
            </div>
            <form class="form-detail" method="post">
                <h2>Yeni Kullanıcı Formu</h2>
                <div class="form-row">
                    <input type="text" id="full-name" class="input-text" placeholder="Adınız" required asp-for="Name">
                </div>
                <div class="form-row">
                    <input type="text" id="full-surname" class="input-text" placeholder="Soyadınız" required asp-for="Surname">
                </div>
                <div class="form-row">
                    <input type="text" id="username" class="input-text" placeholder="Kullanıcı Adınız" required asp-for="UserName">
                </div>
                <div class="form-row">
                    <input type="text" id="your-email" class="input-text" placeholder="Mail Adresiniz" required pattern="[^@@]+@@[^@@]+.[a-zA-Z]{2,6}" asp-for="Mail">
                </div>
                <div class="form-row">
                    <input type="password" id="password" class="input-text" placeholder="Şifreniz" required asp-for="Password">
                </div>
                <div class="form-row-last">
                    <input type="submit" class="register" value="Giriş Yap">
                </div>
            </form>
        </div>
    </div>
</body>
</html>
