@model CreateMenuTableDto

@{
    ViewData["Title"] = "CreateMenuTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Masa Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name"><b>Masa Adı</b></label>
                                <input type="text" class="form-control" id="name" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label for="status"><b>Masa Durumu</b></label>
                                <select asp-for="Status" asp-items="ViewBag.StatusList" class="form-control">
                                    <option>Lütfen bir durum seçin</option>
                                </select>
                            </div>
                            <div class="d-flex justify-content-end mt-4 none-border">
                                <button type="submit" class="btn btn-outline-success mr-3 btn-rounded">Masayı Ekle</button>
                                <a href="/MenuTable/Index/" class="btn btn-outline-danger btn-rounded mr-2">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>