@{
    Layout = null;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeadComponentPartial")

<body class="sub_page">

    <div class="hero_area">
        @await Component.InvokeAsync("_UILayoutNavbarComponentPartial")
    </div>

    <br />
    <br />
    <br />

    <section class="food_section layout_padding">
        <div class="container">

            <h3>Mesaj sayfası</h3>

            <div class="container mt-5">
                <div class="row">
                    <div class="col-12">
                        <h3 class="text-center mb-4">Z&S Restoran Anlık Mesajlar</h3>
                    </div>
                </div>
                <div class="row p-1">
                    <div class="col-2">Kullanıcı Adınız:</div>
                    <div class="col-5">
                        <input type="text" id="userinput" class="form-control" />
                    </div>
                </div>
                <div class="row p-1">
                    <div class="col-2">Mesajınız:</div>
                    <div class="col-5">
                        <input type="text" id="messageinput" class="form-control" />
                    </div>
                </div>
                <div class="row p-1">
                    <div class="col-2"></div>
                    <div class="col-5">
                        <input type="button" id="sendbutton" value="Mesajı Gönder" class="btn btn-outline-warning btn-block font-weight-bold" />
                    </div>
                </div>
                <div class="row p-1">
                    <div class="col-12"></div>
                    <hr />
                </div>
                <div class="row p-1">
                    <ul class="list-group" id="messagelist"></ul>
                </div>
            </div>
        </div>
    </section>

    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")

    @await Component.InvokeAsync("_UILayoutScriptComponentPartial")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>

</body>

</html>