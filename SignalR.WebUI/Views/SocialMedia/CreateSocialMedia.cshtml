@model CreateSocialMediaDto

@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Sosyal Medya Ekleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title"><b>Başlık</b></label>
                                <input type="text" class="form-control" id="title" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label for="icon"><b>Icon</b></label>
                                <input type="text" class="form-control" id="icon" asp-for="Icon">
                            </div>
                            <div class="form-group">
                                <label for="url"><b>Link</b></label>
                                <input type="text" class="form-control" id="url" asp-for="Url">
                            </div>
                            <div class="d-flex justify-content-end mt-4 none-border">
                                <button type="submit" class="btn btn-outline-success mr-3 btn-rounded">Hesap Ekle</button>
                                <a href="/SocialMedia/Index/" class="btn btn-outline-danger btn-rounded mr-2">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>